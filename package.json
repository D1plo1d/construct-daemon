{
  "private": true,
  "scripts": {
    "fix-dat": "yarn upgrade @beaker/dat-node",
    "lint": "eslint ./packages/",
    "delete-node-modules": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "bootstrap": "yarn make-log-dir && yarn install-all",
    "make-log-dir": "sudo mkdir /run/log/tegh; sudo chmod 700 /run/log/tegh && sudo chown $USER: /run/log/tegh",
    "install-all": "yarn --network-timeout 1000000 && lerna exec --concurrency 1 -- yarn --network-timeout 1000000 && cd ./packages/tegh-web-ui/ && yarn --network-timeout 1000000 && cd ../../ && yarn fix-dat",
    "update-defs": "./scripts/updateDefs.sh",
    "frontend:build": "cd packages/tegh-web-ui/ && yarn build",
    "test": "jest",
    "serve-http": "cd ./packages/tegh-web-ui/ && yarn serve",
    "start:production-dat": "gulp start",
    "start": "DAT_URL=\"dat://d6531c1a9b6b23901fa4c766b5842d08fb498e9aabbeca31b14d75ba93dc4ab6/\" gulp start",
    "debug-host": "cd ./packages/tegh-host-posix && yarn debug",
    "dev-host": "cd ./packages/tegh-host-posix && yarn dev",
    "babel:clean": "gulp clean",
    "babel:build": "gulp babel:build",
    "babel:watch": "gulp babel:watch",
    "pkg:build": "cd ./packages/tegh-host-posix && pkg -t node10-linux ./dist/index.js -o ../../snap/tegh",
    "snap:build:armv7": "./scripts/build-armv7-snap.sh",
    "snap:build:x64": "./scripts/build-x64-snap.sh",
    "snap:build": "./scripts/build-snap.sh",
    "snap:push": "snapcraft push --release=beta ./dist/amd64.snap && snapcraft push --release=beta ./dist/armhf.snap",
    "snap:remove": "sudo snap remove tegh",
    "snap:install": "sudo snap install --devmode --dangerous $(find ./dist/ -maxdepth 1 -name \"*.snap\") && yarn journalctl",
    "snap:build-and-install": "yarn build-dev && yarn snap:build:x64 && yarn snap:install",
    "snap:version": "./scripts/releaseConfirmation.sh && lerna version --conventional-commits",
    "snap:publish": "yarn snap:version && yarn snap:build && yarn snap:push",
    "snap:debug": "sudo journalctl --output=short --follow --all | sudo snappy-debug",
    "journalctl": "journalctl -u snap.tegh.tegh.service -n 100 -f",
    "version": "yarn build-dev"
  },
  "command": {
    "bootstrap": {
      "npmClient": "yarn",
      "useWorkspaces": true
    }
  },
  "engines": {
    "node": "10.15.1"
  },
  "os": [
    "linux"
  ],
  "workspaces": {
    "packages": [
      "packages/tegh-autodrop3d",
      "packages/tegh-core",
      "packages/tegh-driver-serial-gcode",
      "packages/tegh-macros-default",
      "packages/tegh-raspberry-pi",
      "packages/tegh-host-posix",
      "packages/tegh-schema"
    ],
    "nohoist": [
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-scripts",
      "**/react-native-scripts/**",
      "**/react-native-usbserial",
      "**/react-native-usbserial/**",
      "**/expo",
      "**/expo/**",
      "**/jest",
      "**/jest/**",
      "**/jest-expo",
      "**/jest-expo/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "@beaker/dat-node": "RangerMauve/dat-node#168b57c",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-import-graphql": "^2.6.2",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "chalk": "^2.4.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-immutablejs": "^0.1.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.20.2",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-monorepo": "^0.2.0",
    "eslint-plugin-react": "^7.11.0",
    "fast-async": "^6.3.8",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cli": "^2.0.1",
    "gulp-plumber": "^1.2.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "jest": "^24.0.0-alpha.6",
    "jest-date-mock": "^1.0.6",
    "lerna": "^3.13.2",
    "netlify-cli": "^2.11.22",
    "plumber": "^0.4.8",
    "rimraf": "^2.6.1",
    "through2": "^2.0.3"
  },
  "resolutions": {
    "friendly-errors-webpack-plugin": "1.7.0"
  }
}
