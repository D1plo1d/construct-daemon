{
  "private": true,
  "scripts": {
    "clean": "npx lerna clean --yes && rm -rf ./node_modules",
    "bootstrap": "yarn && cd ./packages/tegh-server && yarn build",
    "dev": "npx lerna run dev --parallel",
    "test": "cd ./packages/tegh-server/ && yarn test && cd ../tegh-driver-serial-gcode && yarn test",
    "build": "npx lerna run build --parallel",
    "start": "npx lerna run start --parallel",
    "cloc": "cloc . --exclude-dir=node_modules,dist,build,.next"
  },
  "command": {
    "bootstrap": {
      "npmClient": "yarn",
      "useWorkspaces": true
    }
  },
  "workspaces": {
    "packages": [
      "packages/tegh-android-host",
      "packages/tegh-core",
      "packages/tegh-driver-serial-gcode",
      "packages/tegh-macros-default",
      "packages/tegh-protocol",
      "packages/tegh-serial-integration-test",
      "packages/tegh-server"
    ],
    "nohoist": [
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-scripts",
      "**/react-native-scripts/**",
      "**/react-native-usbserial",
      "**/react-native-usbserial/**",
      "**/expo",
      "**/expo/**",
      "**/jest",
      "**/jest/**",
      "**/jest-expo",
      "**/jest-expo/**"
    ]
  },
  "devDependencies": {
    "lerna": "^2.5.1",
    "redux-saga": "d1plo1d/redux-saga"
  },
  "resolutions": {
    "friendly-errors-webpack-plugin": "1.7.0"
  }
}
