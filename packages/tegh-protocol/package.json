{
  "name": "tegh-protocol",
  "version": "0.4.0",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/",
    "clean": "rm -rf build && mkdir build",
    "build": "yarn run clean && babel -d ./build ./src -s",
    "watch": "yarn run clean && babel -d ./build ./src -s --watch"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "exclude": [
            "transform-regenerator",
            "transform-async-to-generator"
          ]
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-export-default-from",
      "@babel/plugin-proposal-export-namespace-from",
      "module:fast-async"
    ],
    "ignore": [
      "build/**/*.js"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "testEnvironment": "node"
  },
  "author": "Rob Gilson",
  "dependencies": {
    "bluebird": "^3.5.2",
    "eventemitter3": "^3.1.0",
    "fast-async": "^6.3.8",
    "jose-jwe-jws": "^0.1.6",
    "node-forge": "^0.7.6",
    "pem-jwk": "^1.5.1",
    "simple-peer": "^9.1.2",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-export-default-from": "^7.0.0-rc.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.1",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "babel-core": "^7.0.0-beta.49",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^23.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-jest": "^21.20.2",
    "eslint-plugin-monorepo": "^0.2.0",
    "jest": "^23.1.0"
  }
}
